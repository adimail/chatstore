{% extends "base.html.jinja2" %}
{% block title %}Error {{ error_code or 'Occurred' }}{% endblock %}
{% block head %}
    <style>
        .error-container {
            margin-top: 5rem;
            margin-bottom: 5rem;
        }
        .error-code {
            font-size: 6rem;
            font-weight: bold;
            color: #dc3545;
        }
        .error-message {
            font-size: 2rem;
            color: #6c757d;
        }
        .error-description {
            font-size: 1.1rem;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="container text-center error-container">
        <div class="error-code">{{ error_code or 'Oops!' }}</div>
        <h2 class="error-message mt-3 mb-3">{{ error_message or 'An Error Occurred' }}</h2>
        <p class="error-description mb-4">
            {{ error_description or 'Something went wrong on our end. Please try again later.' }}
        </p>
        <a href="{{ url_for("web.index") }}" class="btn btn-primary">
            <i class="bi bi-house-door-fill"></i> Go to Homepage
        </a>
        {# Optional: Add a link to go back #}
        {# <button onclick="window.history.back();" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Go Back
    </button> #}
    </div>
{% endblock %}
